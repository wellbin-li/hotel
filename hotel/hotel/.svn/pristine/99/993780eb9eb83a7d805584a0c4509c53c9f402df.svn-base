/*删除酒店数据库,如果存在*/
drop database if exists hotel;
/*创建数据库,并设置编码*/
create database hotel default character set utf8;

use hotel;

drop table if exists user;
/*删除客房类型表*/
drop table if exists roomcategory;
/*删除客房状态表*/
drop table if exists roomstate;
/*删除客房表*/
drop table if exists room;
/*删除顾客表*/
drop table if exists client;
/*删除预订表*/
drop table if exists orders;
/*删除业务表*/
drop table if exists business;

/*============================*/
/* Table: 用户表结构 		  */
/*============================*/
create table user
(
   /* 用户编号,自动增长 */
   uid                  int not null auto_increment,
   /* 用户登录名  */
   ulogin               varchar(20),
   /* 用户姓名  */
   uname                varchar(20),
   /* 用户密码 */
   upassword            varchar(20),
   /* 用户性别（0-男，1-女） */
   usex                 int,
   /* 用户电话 */
   uphone               varchar(20),
   /* 用户类型（0-客服，1-管理员）*/
   ucategory            int,
   /* 用户状态（0-未登录，1-登录）*/
   ustate               int,
   /* 设置编号为主键 */
   primary key (uid)
);
/*=============================*/
/* Table: 客房类型表结构 		   */
/*=============================*/
create table roomcategory
(
   /* 类型编号,自动增长 */
   rcid                  int not null auto_increment,
   /* 类型名称 */
   rcname                varchar(20),
   /* 此类客房价格 */
   rcprice               decimal(8,2),
   /* 配置床位 */
   rcnum                 int,
    /* 类型是否为热点类别*/
   rchot                 bool default false,
   /* 外键,此类型由哪位用户管理 */
   rcuid                 int,
   /* 设置类型编号为主键 */
   primary key (rcid)
);
/*=============================*/
/* Table: 客房状态表结构 		   */
/*=============================*/
create table roomstate
(
   /* 状态编号,自动增长 */
   rsid                  int not null auto_increment,
   /* 状态名称 */
   rsname                varchar(20),
   /* 设置状态编号为主键 */
   primary key (rsid)
);
/*=============================*/
/* Table: 客房表结构 		   */
/*=============================*/
create table room
(
   /* 客房编号,自动增长 */
   rid                   int not null auto_increment,
   /* 客房名称 */
   rname                 varchar(20),
   /* 外键,客房种类编号 */
   rrcid                 int,
   /*  外键,客房状态编号 */
   rrsid                 int,
   /* 简介,客房描述 */
   rremark               varchar(200),
   /* 设置客房编号为主键 */
   primary key (rid)
);
/*=============================*/
/* Table: 顾客表结构 		   */
/*=============================*/
create table client
(
   /* 顾客编号,自动增长 */
   cid                   int not null auto_increment,
   /* 顾客姓名 */
   cname                 varchar(20),
   /* 顾客身份证号码 */
   cidcard               varchar(18),
   /* 顾客电话 */
   cphone                varchar(20),
   /* 设置顾客编号为主键 */
   primary key (cid)
);
/*=============================*/
/* Table: 预订表结构 		   */
/*=============================*/
create table orders
(
   /* 预订编号,自动增长 */
   oid                   int not null auto_increment,
   /* 外键,顾客编号 */
   ocid                  int,
   /* 外键,客房编号 */
   orid                  int,
   /* 预订时间*/
   otime                 timestamp,
   /* 入住日期*/
   odate                 date,
   /* 预订天数*/
   odays                 int,
   /* 订金 */
   ocash                 decimal(8,2),
   /* 外键,处理人*/
   ouid                  int,
   /* 说明，订单描述*/
   oremark               varchar(200),
   /* 设置顾客编号为主键 */
   primary key (oid)
);
/*=============================*/
/* Table: 业务表结构 		   */
/*=============================*/
create table business
(
   /* 业务编号,自动增长 */
   bid                   int not null auto_increment,
   /* 外键,顾客编号 */
   bcid                  int,
   /* 外键,客房编号 */
   brid                  int,
   /* 入住时间*/
   bdate                 timestamp,
   /* 入住天数*/
   bdays                 int,
   /* 押金 */
   bcash                 decimal(8,2),
   /* 总金额 */
   bfee                 decimal(8,2),
   /* 外键,处理人*/
   buid                  int,
   /* 说明，业务描述*/
   bremark               varchar(200),
   /* 设置顾客编号为主键 */
   primary key (bid)
);
